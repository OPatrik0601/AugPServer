@model AugPServer.Models.ProjectFileModel

@{
    ViewData["Title"] = "ProjectFile";
}

<h1>The .augp file</h1>

<h4>Step 4</h4>
<p>Download the .augp file from here: <a asp-action="DownloadAugpFile">click here to download!</a></p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProjectFile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="URLToFile" class="control-label"></label>
                <input asp-for="URLToFile" class="form-control" />
                <span asp-validation-for="URLToFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
