@model AugPServer.Models.SessionModelCollector

@{
    ViewData["Title"] = "We're done!";
}

<h1>Your images are ready to use!</h1>

<h4>Step 7</h4>
<p>The new images: </p>
<ul>
    @{
        if (Model.Figures != null) {
            for (int i = 0; i < Model.Figures.Count; i++) {
                string targetImg = $"/TempFiles/~{Model.SessionId}/NewImages/{Model.Figures[i].FinalImageName}.png";
                <li><a href=@targetImg target="_blank">@Model.Figures[i].Name</a></li>
            }
        } else {
            <li>No images found.</li>
        }
    }
</ul>
@{
    if (Model.Figures != null && Model.Figures.Count > 0) {
        <a asp-action="DownloadImageZIP">Download all as .zip</a>
    }
}

<br />
<button type="button" class="removeButtonBg" onclick="confirmNewArticle()">Start a new article</button>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
