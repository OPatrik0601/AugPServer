@{
    ViewData["Title"] = "Create";
}

<h1>Upload images</h1>

<h4>Step 2</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form method="post" enctype="multipart/form-data" asp-controller="NewProject" asp-action="ImageUpload">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload file</p>
                    <input class="form-control" name="files" multiple="multiple" type="file" accept="image/*" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input class="btn btn-light" type="submit" value="Upload" />
                </div>

                <div class="col-md-10 mt-2">
                    <a asp-action="FigureList" class="btn btn-success">Next ></a>
                </div>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="MetaData">< Back to the meta informations</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
